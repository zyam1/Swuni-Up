<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context=".KakaoSigninActivity">

    <!-- 로고 이미지 -->
    <ImageView
        android:layout_width="155dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:contentDescription="@null"
        android:src="@drawable/loginlogobox" />

    <!-- 둥근 모서리 흰색 배경 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:radius="30dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="552dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="25dp">

            <!-- 아이디 입력 -->
            <EditText
                android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_background"
                android:hint="아이디"
                android:padding="10dp"
                android:textSize="16sp" />

            <!-- 비밀번호 입력 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:gravity="center_vertical"
                android:background="@drawable/rounded_background"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="비밀번호"
                    android:inputType="textPassword"

                    android:padding="10dp"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/btn_password_toggle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="비밀번호 보기 버튼"
                    android:padding="10dp"
                    android:src="@drawable/ic_eye" />
            </LinearLayout>

            <!-- 비밀번호 찾기 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="비밀번호를 잊어버렸어요"
                android:textColor="#BDBDBD"
                android:textSize="14sp" />

            <!-- 로그인 버튼 -->
            <android.widget.Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@color/blue"
                android:backgroundTint="#25408F"
                android:text="로그인"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <!-- 카카오 로그인 버튼 -->
            <android.widget.Button
                android:id="@+id/btn_kakao_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"

                android:backgroundTint="#FEE500"

                android:text="카카오로 시작하기"
                android:background="@color/yellow"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- 가입하기 -->
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:text="아직 계정이 없나요?"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:textColor="#757575"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_register"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text=" 가입하기"
                    android:textColor="#25408F"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
