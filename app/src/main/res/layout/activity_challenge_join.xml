<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChallengeCreate"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:background="?attr/colorPrimary"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="350dp"
                    android:layout_height="216dp"
                    android:contentDescription="@string/image_view"
                    android:src="@drawable/ic_default_image"
                    android:scaleType="centerCrop"
                    android:background="@drawable/edit_text_background"
                    android:layout_gravity="center"
                    android:clipToOutline="true" />

                <TextView
                    android:id="@+id/dDayTextView"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/text_view_background"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:fontFamily="@font/scdream4"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="마감 D - 3" />

                <TextView
                    android:id="@+id/countTextView"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="63dp"
                    android:background="@drawable/edit_text_background"
                    android:backgroundTint="@color/gray25"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:fontFamily="@font/scdream4"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="5 / 20 명" />

            </FrameLayout>

            <!-- FrameLayout 아래에 TextView 추가 -->
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:fontFamily="@font/wavve_pado"
                android:text="천국의 계단"
                android:textSize="24sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/descriptionTextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:fontFamily="@font/scdream3"
                android:layout_marginTop="10dp"
                android:lineHeight="24dp"
                android:text="인터벌 루틴 같이 뛰실 분 \n속도 12로 2분 걷고 속도 5로 1분 걷고 5set"
                android:textSize="12sp"
                android:gravity="start" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dayTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:fontFamily="@font/scdream3"
                    android:layout_marginTop="10dp"
                    android:lineHeight="24dp"
                    android:text="2/5 ~ 2/20"
                    android:textSize="12sp"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:fontFamily="@font/scdream3"
                    android:layout_marginTop="10dp"
                    android:lineHeight="24dp"
                    android:text="|"
                    android:textSize="12sp"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:fontFamily="@font/scdream3"
                    android:layout_marginTop="10dp"
                    android:lineHeight="24dp"
                    android:text="15일 챌린지"
                    android:textSize="12sp"
                    android:gravity="start" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/participantsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:fontFamily="@font/wavve_pado"
                    android:text="참여자"
                    android:layout_weight="1"
                    android:textSize="24sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scrollLeftButton"
                    android:layout_marginRight="20dp"
                    android:text="왼쪽" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scrollRightButton"
                    android:layout_marginRight="20dp"
                    android:text="오른쪽" />

            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <!-- LinearLayout 안에 동그라미들을 배치 -->
                <LinearLayout
                    android:id="@+id/circleContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingLeft="16dp">

                    <!-- 동그라미들 -->
                    <ImageView
                        android:id="@+id/circle1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="16dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/profile_img_background"
                        android:contentDescription="profile1" />

                    <ImageView
                        android:id="@+id/circle2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="16dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/profile_img_background" />

                    <ImageView
                        android:id="@+id/circle3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="16dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/profile_img_background" />

                    <ImageView
                        android:id="@+id/circle4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="16dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/profile_img_background" />

                    <ImageView
                        android:id="@+id/circle5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="16dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/profile_img_background" />

                    <ImageView
                        android:id="@+id/circle6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="16dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/profile_img_background" />

                    <ImageView
                        android:id="@+id/circle7"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="16dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/profile_img_background" />

                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/makeButton"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:layout_gravity="center"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/wavve_pado"
                android:layout_marginBottom="20dp"
                android:textSize="20sp"
                android:text="참여하기" />

        </LinearLayout>

    </android.widget.ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
