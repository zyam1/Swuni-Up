<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- 챌린지 카드 컨테이너 -->
    <LinearLayout
        android:id="@+id/my_challenge_component"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:background="@drawable/shadow_challenge_list"
        android:gravity="center_vertical">

        <!-- 프로필 이미지 + 오버레이 -->
        <FrameLayout
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginRight="8dp">

            <!-- 챌린지 이미지 -->
            <ImageView
                android:id="@+id/my_challenge_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/edit_text_background"
                android:background="@drawable/edit_text_background"
                android:clipToOutline="true" />

            <!-- 반투명 오버레이 -->
            <View
                android:id="@+id/progress_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/overlay_background"
                android:clipToOutline="true"/>

            <!-- 진행도 텍스트 (예: 80%) -->
            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80%"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </FrameLayout>

        <!-- 챌린지 텍스트 정보 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">  <!-- 남은 공간 모두 차지 -->

            <!-- 챌린지 제목 -->
            <TextView
                android:id="@+id/my_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="아침 9시 기상"
                android:fontFamily="@font/wavve_pado"
                android:textSize="20sp"/>

            <!-- 챌린지 설명 -->
            <TextView
                android:id="@+id/my_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="방학했다고 오후에 눈 뜨는 삶 그만하고 싶다..."
                android:fontFamily="@font/scdream3"
                android:textSize="11sp"/>

            <!-- 빈 공간 추가 (아래쪽으로 밀기) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- D-Day & 참여 인원 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_dDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/text_view_background"
                    android:text="마감 D - 3"
                    android:fontFamily="@font/scdream3"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/my_participants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/edit_text_background"
                    android:text="참여인원 8"
                    android:fontFamily="@font/scdream3"
                    android:textSize="8sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
