<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shadow_challenge_list"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginBottom="20dp"
    android:id="@+id/big_challenge"
    android:clipToOutline="true">

    <FrameLayout
        android:layout_width="257dp"
        android:layout_height="182dp" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_default_image"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />

        <TextView
            android:id="@+id/dDayTextView"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_view_background"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:fontFamily="@font/scdream4"
            android:textSize="10sp"
            android:gravity="center"
            android:text="마감 D - 3" />

        <TextView
            android:id="@+id/countTextView"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:layout_marginTop="43dp"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="@color/gray25"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:fontFamily="@font/scdream4"
            android:textSize="10sp"
            android:gravity="center"
            android:text="5 / 20 명" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="257dp"
        android:layout_height="104dp"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/wavve_pado"
            android:text="천국의 계단"
            android:textSize="22sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="33dp"
            android:fontFamily="@font/scdream3"
            android:layout_marginTop="8dp"
            android:lineHeight="24dp"
            android:text="인터벌 루틴 같이 뛰실 분"
            android:textSize="12sp"
            android:gravity="start" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/scdream3"
                android:layout_marginTop="10dp"
                android:lineHeight="24dp"
                android:text="2/5 ~ 2/20"
                android:textSize="12sp"
                android:gravity="start" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:fontFamily="@font/scdream3"
                android:layout_marginTop="10dp"
                android:lineHeight="24dp"
                android:text="|"
                android:textSize="12sp"
                android:gravity="start" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:fontFamily="@font/scdream3"
                android:layout_marginTop="10dp"
                android:lineHeight="24dp"
                android:text="15일 챌린지"
                android:textSize="12sp"
                android:gravity="start" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>